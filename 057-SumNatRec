import java.util.*;
public class SumNatRec {
    public static int findSum(int n)
    {
        if(n==0)
            return 0;
        else
        return n+findSum(n-1);
    }
    public static void main(String[] args)
    {
        int n;
        System.out.println("Enter a num:");
        Scanner sc=new Scanner(System.in);
        n= sc.nextInt();
        System.out.println(findSum(n));
    }
}

