import java.util.*;
public class Pyramid7 {
    public static void main(String[] args)
    {
        int i,j,n;
        Scanner sc=new Scanner(System.in);
        n=sc.nextInt();
        for(i=n;i>0;i--)
        {
            for(j=1;j<=n-i;j++)
            {
                System.out.print(" ");
            }
            for(j=i;j>0;j--)
            {
                System.out.print(i +" ");
            }
            System.out.println();
        }
    }
}

